<UserControl x:Class="MinesweeperProject.View.RankingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F9F9F9" Width="400" Height="550">
	<Border Padding="25">
		<DockPanel>
			<TextBlock Text="🏆 명예의 전당" FontSize="26" FontWeight="Bold"
                       Foreground="#333333" HorizontalAlignment="Center"
                       DockPanel.Dock="Top" Margin="0,0,0,25"/>

			<Button Content="돌아가기" Command="{Binding CloseCommand}"
                    DockPanel.Dock="Bottom" Height="45" FontWeight="Bold"
                    Background="#E0E0E0" BorderThickness="0" Margin="0,15,0,0">
				<Button.Resources>
					<Style TargetType="Border">
						<Setter Property="CornerRadius" Value="8"/>
					</Style>
				</Button.Resources>
			</Button>

			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<ItemsControl ItemsSource="{Binding GroupedRankings}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<StackPanel Margin="0,0,0,25">
								<TextBlock Text="{Binding Difficulty}" FontSize="18"
                                           FontWeight="Bold" Foreground="#5C6BC0" Margin="5,0,0,5"/>
								<Border BorderBrush="#5C6BC0" BorderThickness="0,0,0,2" Margin="0,0,0,10"/>

								<ItemsControl ItemsSource="{Binding Rankings}">
									<ItemsControl.ItemTemplate>
										<DataTemplate>
											<Border Background="White" Margin="0,2" CornerRadius="5" Padding="10">
												<Grid>
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="40"/>
														<ColumnDefinition Width="*"/>
														<ColumnDefinition Width="80"/>
													</Grid.ColumnDefinitions>

													<TextBlock Text="{Binding Medal}" FontSize="20" Grid.Column="0" VerticalAlignment="Center"/>
													<TextBlock Text="{Binding Nickname}" Grid.Column="1" FontSize="16" FontWeight="SemiBold"
                                                               VerticalAlignment="Center" Margin="10,0,0,0"/>
													<TextBlock Text="{Binding TimeDisplay}" Grid.Column="2" FontSize="16"
                                                               Foreground="#E53935" FontWeight="Bold"
                                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
												</Grid>
											</Border>
										</DataTemplate>
									</ItemsControl.ItemTemplate>
								</ItemsControl>
							</StackPanel>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</DockPanel>
	</Border>
</UserControl>