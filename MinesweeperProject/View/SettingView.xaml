<UserControl x:Class="MinesweeperProject.Views.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300" Height="400" Background="White">
    <StackPanel Margin="20">
        <TextBlock Text="환경 설정" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DockPanel Margin="0,5">
            <TextBlock Text="마스터 사운드" VerticalAlignment="Center"/>
            <ToggleButton Content="{Binding IsMasterSoundOn}" 
                          IsChecked="{Binding IsMasterSoundOn}" 
                          HorizontalAlignment="Right" Width="60"/>
        </DockPanel>

        <Separator Margin="0,15"/>

        <TextBlock Text="배경음악 선택" Margin="0,5"/>
        <ComboBox ItemsSource="{Binding BgmList}" 
                  SelectedItem="{Binding SelectedBgm}"
                  DisplayMemberPath="Title"/>

        <Separator Margin="0,15"/>

        <CheckBox Content="효과음 사용" IsChecked="{Binding IsSfxEnabled}" Margin="0,5"/>

        <Separator Margin="0,15"/>

        <TextBlock Text="배경음악 볼륨" Margin="0,5"/>
        <Slider Minimum="0" Maximum="100" Value="{Binding BgmVolume}" SmallChange="1"/>

        <TextBlock Text="효과음 볼륨" Margin="10,10,0,5"/>
        <Slider Minimum="0" Maximum="100" Value="{Binding SfxVolume}" SmallChange="1"/>
    </StackPanel>
</UserControl>