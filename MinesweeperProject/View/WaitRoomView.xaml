<UserControl x:Class="MinesweeperProject.View.WaitRoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MinesweeperProject.View"
             mc:Ignorable="d"
             Background="#F3F3F3">

    <Grid>
        <!-- 🔥 MultiSettingView와 동일 -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">

            <!-- 상단 카드 (유저/대기실 표시) -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,30"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="⏳ "
                               FontSize="18"/>
                    <TextBlock Text="대기실"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                </StackPanel>
            </Border>

            <!-- 접속 플레이어 카드 -->
            <Border Background="White"
                    CornerRadius="10"
                    Padding="15"
                    Margin="0,0,0,15"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">

                <StackPanel>
                    <TextBlock Text="접속한 플레이어"
                               FontSize="13"
                               Foreground="#666666"
                               Margin="5,0,0,6"/>

                    <ListBox ItemsSource="{Binding Players}"
                             Height="140"
                             FontSize="14"
                             Padding="5"
                             BorderBrush="#CCCCCC"
                             BorderThickness="1"/>
                </StackPanel>
            </Border>

            <!-- 게임 시작 -->
            <Button Content="게임 시작!"
                    Command="{Binding StartGameCommand}"
                    IsEnabled="{Binding CanStartGame}"
                    Height="45"
                    Margin="0,5"
                    Background="#4CAF50"
                    Foreground="White"/>

            <!-- 나가기 -->
            <Button Content="나가기"
                    Command="{Binding CloseCommand}"
                    Height="45"
                    Margin="0,20"
                    Background="#FFEBEE"/>
        </StackPanel>
    </Grid>
</UserControl>
