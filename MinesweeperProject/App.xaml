<Application x:Class="MinesweeperProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MinesweeperProject.ViewModels"
             xmlns:view="clr-namespace:MinesweeperProject.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type vm:LoginViewModel}">
                <view:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MainMenuViewModel}">
                <view:MainMenuView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:GameViewModel}">
                <view:GameView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:RankingViewModel}">
                <view:RankingView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>